@import 'bootstrap';
@import 'bootstrap-sprockets';
@import 'froala_editor.min';
@import 'froala_style.min';
@import 'font-awesome-sprockets';
@import 'font-awesome';

body {
 position: relative;
 font-size: 16px;
 font-family: 'ubuntu', arial, sans-serif, serif;
 background-color: #1e1e1e;
 color: #FFF;
}

.padding {
 position: relative;
 padding: 10px;
}

.header-avatar {
 position: relative;
 width: 34px;
 height: 34px;
 border-radius: 34px;
 margin-top: 8px;
}

.navbar-default {
 position: relative;
 background-color: #000 !important;
 border: 1px solid #000 !important;
}

.top {
 position: relative;
 margin-top: 15px;	
}

#presenter {
 position: relative;
 margin-top: -20px;
}

#contact {
 position: relative;
 color: #FFF;

 form{
  input[type=text], input[type=email], textarea{
   position: relative;
   background-color: #000 !important;
   border: 1px solid #000 !important;
  }
  input[type=submit]{
   position: relative;
   background-color: #000;
   border: 1px solid #999;
   text-tranform: uppercase;
   font-weight: bold;
   border-radius: 0px;
   padding: 15px;
  }
 }
}

footer {
 position: relative;
 margin-top: 70px;
 margin-bottom: 0px !important;
 padding-bottom: 0px;
}

@mixin form-base {
 form {
  input[type=email], input[type=text]{
   position: relative;
   height: 40px;
  }
  textarea {
   position: relative;
   height: 140px;	
  } 
 }
}