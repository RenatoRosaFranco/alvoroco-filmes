<%= form_for([:dashboard, @movie]) do |f| %>
	<div class='field'>
		<%= f.label :name %>
	    <div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :name, class: 'form-control', required: 'required',
		placeholder: 'Digite o nome', autocomplete: 'off' %>
		</div>
	</div>
	<div class='field'>
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control', required: 'required',
		placeholder: 'Digite a descrição', autocomplete: 'off' %>
	</div>
	<div class='field'>
		<%= f.label :link %>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.url_field :link, class: 'form-control', required: 'required',
		placeholder: 'Digite o link', autocomplete: 'off' %>
		</div>
	</div>
	<div class='field'>
		<%= f.label :tags %>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :tags, class: 'form-control', required: 'required',
		placeholder: 'Digite as tags', autocomplete: 'off' %>
		</div>
	</div>
	<div class='field'>
		<%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>