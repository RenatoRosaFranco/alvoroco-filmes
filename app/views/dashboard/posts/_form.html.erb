<%= form_for([:dashboard, @post]) do |f| %>
	
	<%= has_errors?(@post) %>

	<div class='field'>
		<%= f.label :title %>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :title, class: 'form-control', required: 'required',
		placeholder: 'Digite o titulo', autocomplete: 'off' %>
		</div>
	</div>
	
	<div class='field'>
		<%= f.label :description %></br>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :description, class: 'form-control', required: 'required',
		placeholder: 'Digite a descrição' %>
		</div>
	</div>
	
	<div class='field'>
		<%= f.label :content %></br>
		<%= f.text_area :content, class: 'form-control editor', required: 'required',
		placeholder: 'Digite o conteudo', autocomplete: 'off' %>
	</div>
	
	<div class='field'>
		<%= f.label :published %></br>
		<%= f.check_box :published %>
	</div>
	
	<div class='field'>
		<%= f.label :tags %>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :tags, class: 'form-control', requred: 'required', placeholder: 'Digite as tags', autocomplete: 'off' %>
		</div>
	</div>
	
	<div class='field'></br>
		<%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>