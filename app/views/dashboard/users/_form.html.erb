<%= form_for([:dashboard, @user]) do |f| %>
	
	<%= has_errors?(@user) %>

	<div class='field'>
		<%= f.label :avatar %></br>
		<%= f.file_field :avatar %>
	</div>

	<div class='field'>
		<%= f.label :name %></br>
		<div class='input-group'>
	    <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>	
		<%= f.text_field :name, class: 'form-control', required: 'required',
		placeholder: 'Digite o nome', autocomplete: 'off' %>
		</div>
	</div>

	<div class='field'>
		<%= f.label :email %></br>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.email_field :email, class: 'form-control', required: 'required',
		placeholder: 'Digite o e-mail', autocomplete: 'off' %>
		</div>
	</div>

	<div class='field'>
		<%= f.label :password %></br>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.password_field :password, class: 'form-control', required: 'required',
		placeholder: 'Digite a senha', autocomplete: 'off' %>
		</div>
	</div>

	<div class='field'></br>
		<%= f.label :password_confirmation %>
		<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
		<%= f.password_field :password_confirmation, class: 'form-control', required: 'required',
		placeholder: 'Confirme a senha', autocomplete: 'off' %>
		</div>
	</div>

	<% if current_user.admin? %>
	<div class='field'>
		<%= f.label :admin %></br>
		<%= f.check_box :admin %>
	</div>
	<% end %>

	<div class='field'>
		<%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>